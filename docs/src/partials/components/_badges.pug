#badges
    h2.docs-title.my-4.font-light
        | Badges
        a.anchor.ml-1.text-decoration-none(href="#badges") #
    p Badges are often used as unread number indicators.
    .row.mb-3.align-items-center
        .col.d-flex.align-items-center  
            span.badge.mr-3.font-lg
                img(src="img/icon/bell.svg" alt="")
            span.badge.mr-3.font-lg(data-badge="5")
                img(src="img/icon/bell.svg" alt="")
            span.avatar.badge.mr-3(data-badge="99+")
                img.avatar-img(src="../img/avatar/3.jpg" alt="")
    pre.code(data-lang='HTML')
        code.docs-code
            :highlight(lang="html")
                <span class="badge">
                    <img src="img/icon/bell.svg" alt="">
                </span>
                
                <span class="badge" data-badge="5">
                    <img src="img/icon/bell.svg" alt="">
                </span>
                
                <span class="avatar badge" data-badge="99+">
                    <img src="../img/avatar/3.jpg" alt="...">
                </span>
