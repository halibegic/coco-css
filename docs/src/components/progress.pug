extends ../_layout/_main
block variables
    - var title = "Progress - Coco"
    - var navLink = "docs"

block content
    include ../_layout/_header

    .container
        .row
            main.col-12.col-xl-10
                #progress
                    h2.mb-2
                        | Progress
                        a.anchor.ml-1.text-decoration-none(href="#progress") #
                    p The progress indicates the progress completion of a task.
                    .row.mb-3
                        .col-12
                            .progress
                                .progress-bar(style="width: 50%")
                    pre.code(data-lang="HTML")
                        code.docs-code
                            :highlight(lang="html")
                                <div class="progress">
                                    <div class="progress-bar" style="width: 50%"></div>
                                </div>
                #colors
                    h4.mt-4.mb-2
                        | Colors
                        a.anchor.ml-1.text-decoration-none(href="#colors") #
                    p Use color utility to set progress background color.
                    .row
                        .col-12
                            .progress.bg-primary-soft.mb-3
                                .progress-bar.bg-primary(style="width: 100%")
                            .progress.bg-secondary-soft.mb-3
                                .progress-bar.bg-secondary(style="width: 90%")
                            .progress.bg-success-soft.mb-3
                                .progress-bar.bg-success(style="width: 80%")
                            .progress.bg-error-soft.mb-3
                                .progress-bar.bg-error(style="width: 70%")
                            .progress.bg-warning-soft.mb-3
                                .progress-bar.bg-warning(style="width: 60%")
                            .progress.bg-info-soft.mb-3
                                .progress-bar.bg-info(style="width: 50%")
                            .progress.bg-dark-soft.mb-3
                                .progress-bar.bg-dark(style="width: 40%")
                            .progress.bg-light-soft
                                .progress-bar.bg-light(style="width: 30%")
                #sizes
                    h4.mt-4.mb-2
                        | Sizes
                        a.anchor.ml-1.text-decoration-none(href="#sizes") #
                    .row
                        .col-12
                            .progress.progress-sm.mb-3
                                .progress-bar(style="width: 75%")
                            .progress.progress-lg.mb-3
                                .progress-bar(style="width: 25%")
                    p Add the  #[code progresss-sm] or #[code progresss-lg] class for small or large progress bar.
                    pre.code(data-lang="HTML")
                        code.docs-code
                            :highlight(lang="html")
                                <div class="progress progresss-sm">
                                    <div class="progress-bar" style="width: 75%"></div>
                                </div>

                                <div class="progress progresss-lg">
                                    <div class="progress-bar" style="width: 25%"></div>
                                </div>

            aside.col-12.col-xl-2
                include ../_layout/_sidebar

        include ../_layout/_footer
