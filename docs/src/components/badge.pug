extends ../_layout/_main
block variables
    - var title = 'Badge'
    - var navLink = 'docs'

block content
    include ../_layout/_header

    .container
        .row
            main.col-12.col-xl-10
                #badge
                    h2.mb-2.text-dark
                        | Badge
                        a.anchor.ml-1.text-decoration-none(href="#badge") #
                    p Small labelling element using the  #[code badge] class.
                #colors
                    h4.mt-4.mb-2
                        | Colors
                        a.anchor.ml-1.text-decoration-none(href="#colors") #
                    p Use color utility to set badge background color.
                    .row
                        .col-12
                            span.badge.bg-primary.mb-3.mr-3 primary
                            span.badge.bg-secondary.mb-3.mr-3 secondary
                            span.badge.bg-success.mb-3.mr-3 success
                            span.badge.bg-error.mb-3.mr-3 error
                            span.badge.bg-warning.mb-3.mr-3 warning
                            span.badge.bg-info.mb-3.mr-3 info
                            span.badge.bg-dark.mb-3.mr-3 dark
                            span.badge.bg-light.mb-3 light
                    pre.code(data-lang="HTML")
                        code.docs-code
                            :highlight(lang="html")
                                <span class="badge bg-primary">primary</span>
                                <span class="badge bg-secondary">secondary</span>
                                <span class="badge bg-success">success</span>
                                <span class="badge bg-error">error</span>
                                <span class="badge bg-warning">warning</span>
                                <span class="badge bg-info">info</span>
                                <span class="badge bg-dark">dark</span>
                                <span class="badge bg-light">light</span>
                #pill
                    h4.mt-4.mb-2
                        | Pill
                        a.anchor.ml-1.text-decoration-none(href="#pill") #
                    p Add the  #[code rounded-pill] class for more rounded badges.
                    .row
                        .col-12
                            span.badge.bg-primary.rounded-pill.mb-3.mr-3 primary
                            span.badge.bg-secondary.rounded-pill.mb-3.mr-3 secondary
                            span.badge.bg-success.rounded-pill.mb-3.mr-3 success
                            span.badge.bg-error.rounded-pill.mb-3.mr-3 error
                            span.badge.bg-warning.rounded-pill.mb-3.mr-3 warning
                            span.badge.bg-info.rounded-pill.mb-3.mr-3 info
                            span.badge.bg-dark.rounded-pill.mb-3.mr-3 dark
                            span.badge.bg-light.rounded-pill.mb-3 light
                    pre.code(data-lang="HTML")
                        code.docs-code
                            :highlight(lang="html")
                                <span class="badge bg-primary rounded-pill">primary</span>
                                <span class="badge bg-secondary rounded-pill">secondary</span>
                                <span class="badge bg-success rounded-pill">success</span>
                                <span class="badge bg-error rounded-pill">error</span>
                                <span class="badge bg-warning rounded-pill">warning</span>
                                <span class="badge bg-info rounded-pill">info</span>
                                <span class="badge bg-dark rounded-pill">dark</span>
                                <span class="badge bg-light rounded-pill">light</span>

            aside.col-12.col-xl-2
                include ../_layout/_sidebar

        include ../_layout/_footer
