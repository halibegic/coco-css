extends ../_layout/_main
block variables
    - var title = 'Modals'
    - var navLink = 'docs'

block content
    include ../_layout/_header

    .container
        .row
            main.col-12.col-xl-10
                #modals
                    h2.mb-2.text-dark
                        | Modals
                        a.anchor.ml-1.text-decoration-none(href="#modals") #
                    p Modals are flexible dialog prompts.
                    .row.mb-3
                        .col-12
                            button.btn.btn-primary(data-toggle="modal" data-target="modal-example-1") Open modal
                    .docs-modal.mb-3
                        .modal.show
                            .modal-content.border.shadow-sm
                                .modal-header
                                    .modal-title.h5 Modal title
                                    button.close &times;
                                .modal-body
                                    p
