                                h2.card-title Startup
                                h6.card-subtitle.pb-4.mb-4.border-bottom
                                    span.text-muted $ 
                                    span.display-3.font-bold.text-tight 25
                                    span.text-muted /user

                                ul.list-unstyled.mb-4
                                    li.d-flex
                                        svg.text-success(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                                            polyline(points='20 6 9 17 4 12')
                                        span.ml-2 20 users included

                                    li.d-flex
                                        svg.text-success(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                                            polyline(points='20 6 9 17 4 12')
                                        span.ml-2 10 GB of storage

                                    li.d-flex
                                        svg.text-success(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                                            polyline(points='20 6 9 17 4 12')
                                        span.ml-2 Priority email support

                                a.btn.btn-primary.btn-lg.btn-block.rounded-lg(href="#") Choose Plan

                .col-12.col-lg-3
                    .card.mb-4.mb-lg-0.border-0.shadow-none
