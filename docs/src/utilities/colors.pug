extends ../_layout/_main
block variables
    - var title = 'Colors'
    - var navLink = 'docs'

block content
    include ../_layout/_header

    .container
        .row
            main.col-12.col-xl-10
                #colors
                    h2.mb-2.text-dark
                        =title
                        a.anchor.ml-1.text-decoration-none(href="#colors") #
                    p Color utilities are used for changing colors for text, link and background.
                #text
                    h4.mt-4.mb-2
                        | Text
                        a.anchor.ml-1.text-decoration-none(href="#text") #
                    .row
                        .col-12
                            span.d-inline-block.mb-3.mr-3.text-primary primary
                            span.d-inline-block.mb-3.mr-3.text-secondary secondary
                            span.d-inline-block.mb-3.mr-3.text-success success
                            span.d-inline-block.mb-3.mr-3.text-error error
                            span.d-inline-block.mb-3.mr-3.text-warning warning
                            span.d-inline-block.mb-3.mr-3.text-info info
                            span.d-inline-block.mb-3.mr-3.text-dark dark
                            span.d-inline-block.mb-3.mr-3.text-light light
                            span.d-inline-block.mb-3.mr-3.px-2.text-white.bg-dark.rounded white
                            span.d-inline-block.mb-3.mr-3.text-black black
                            span.d-inline-block.mb-3.text-muted muted
                    pre.code(data-lang="HTML")
                        code.docs-code
                            :highlight(lang="html")
                                <span class="text-primary">primary</span>
                                <span class="text-secondary">secondary</span>
                                <span class="text-success">success</span>
                                <span class="text-warning">warning</span>
                                <span class="text-info">info</span>
                                <span class="text-error">error</span>
                                <span class="text-dark">dark</span>
                                <span class="text-light">light</span>
                                <span class="text-white">white</span>
                                <span class="text-black">black</span>
                                <span class="text-muted">muted</span>
                #link
                    h4.mt-4.mb-2
                        | Link
                        a.anchor.ml-1.text-decoration-none(href="#link") #
                    .row
                        .col-12
                            a.d-inline-block.mb-3.mr-3.text-primary(href="#") primary
                            a.d-inline-block.mb-3.mr-3.text-secondary(href="#") secondary
                            a.d-inline-block.mb-3.mr-3.text-success(href="#") success
                            a.d-inline-block.mb-3.mr-3.text-error(href="#") error
                            a.d-inline-block.mb-3.mr-3.text-warning(href="#") warning
                            a.d-inline-block.mb-3.mr-3.text-info(href="#") info
                            a.d-inline-block.mb-3.mr-3.text-dark(href="#") dark
                            a.d-inline-block.mb-3.mr-3.text-light(href="#") light
                            a.d-inline-block.mb-3.mr-3.px-2.text-white.bg-dark.rounded(href="#") white
                            a.d-inline-block.mb-3.mr-3.text-black(href="#") black
                            a.d-inline-block.mb-3.text-muted(href="#") muted
                    pre.code(data-lang="HTML")
                        code.docs-code
                            :highlight(lang="html")
                                <a class="text-primary" href="#">primary</a>
                                <a class="text-secondary" href="#">secondary</a>
                                <a class="text-success" href="#">success</a>
                                <a class="text-error" href="#">error</a>
                                <a class="text-warning" href="#">warning</a>
                                <a class="text-info" href="#">info</a>
                                <a class="text-dark" href="#">dark</a>
                                <a class="text-light" href="#">light</a>
                                <a class="text-white" href="#">white</a>
                                <a class="text-black" href="#">black</a
                                <a class="text-muted" href="#">muted</a>
                #background
                    h4.mt-4.mb-2
                        | Background
                        a.anchor.ml-1.text-decoration-none(href="#background") #
                    .row
                        .col-12
                            span.d-inline-block.mb-3.mr-3.px-2.bg-primary.rounded primary
                            span.d-inline-block.mb-3.mr-3.px-2.bg-secondary.rounded secondary
                            span.d-inline-block.mb-3.mr-3.px-2.bg-success.rounded success
                            span.d-inline-block.mb-3.mr-3.px-2.bg-error.rounded error
                            span.d-inline-block.mb-3.mr-3.px-2.bg-warning.rounded warning
                            span.d-inline-block.mb-3.mr-3.px-2.bg-info.rounded info
                            span.d-inline-block.mb-3.mr-3.px-2.bg-dark.rounded dark
                            span.d-inline-block.mb-3.mr-3.px-2.text-dark.bg-light.rounded light
                            span.d-inline-block.mb-3.mr-3.px-2.text-dark.bg-white.rounded white
                            span.d-inline-block.mb-3.mr-3.px-2.bg-black.rounded black
                            span.d-inline-block.mb-3.px-2.bg-transparent.rounded transparent
                    pre.code(data-lang="HTML")
                        code.docs-code
                            :highlight(lang="html")
                                <span class="bg-primary">primary</span>
                                <span class="bg-secondary">secondary</span>
                                <span class="bg-success">success</span>
                                <span class="bg-error">error</span>
                                <span class="bg-warning">warning</span>
                                <span class="bg-info">info</span>
                                <span class="bg-dark">dark</span>
                                <span class="bg-light">light</span>
                                <span class="bg-white">white</span>
                                <span class="bg-black">black</span>
                                <span class="bg-transparent">transparent</span>

                #soft-background
                    h4.mt-4.mb-2
                        | Soft background
                        a.anchor.ml-1.text-decoration-none(href="#soft-background") #
                    .row
                        .col-12
                            span.d-inline-block.mb-3.mr-3.px-2.bg-primary-soft.rounded primary
                            span.d-inline-block.mb-3.mr-3.px-2.bg-secondary-soft.rounded secondary
                            span.d-inline-block.mb-3.mr-3.px-2.bg-success-soft.rounded success
                            span.d-inline-block.mb-3.mr-3.px-2.bg-error-soft.rounded error
                            span.d-inline-block.mb-3.mr-3.px-2.bg-warning-soft.rounded warning
                            span.d-inline-block.mb-3.mr-3.px-2.bg-info-soft.rounded info
                            span.d-inline-block.mb-3.mr-3.px-2.bg-dark-soft.rounded dark
                            span.d-inline-block.mb-3.mr-3.px-2.bg-light-soft.rounded light
                            span.d-inline-block.mb-3.mr-3.px-2.bg-white-soft.rounded white
                            span.d-inline-block.mb-3.px-2.bg-black-soft.rounded black
                    pre.code(data-lang="HTML")
                        code.docs-code
                            :highlight(lang="html")
                                <span class="bg-primary-soft">primary</span>
                                <span class="bg-secondary-soft">secondary</span>
                                <span class="bg-success-soft">success</span>
                                <span class="bg-error-soft">error</span>
                                <span class="bg-warning-soft">warning</span>
                                <span class="bg-info-soft">info</span>
                                <span class="bg-dark-soft">dark</span>
                                <span class="bg-light-soft">light</span>
                                <span class="bg-white-soft">white</span>
                                <span class="bg-black-soft">black</span>

            aside.col-12.col-xl-2
                include ../_layout/_sidebar

        include ../_layout/_footer
